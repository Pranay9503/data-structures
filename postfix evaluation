#define MAX 20
#include<stdio.h>
#include<stdlib.h>
#include<math.h>
int a[MAX],top=-1;
int operation(int op1,int op2,char c)
{
    switch(c)
    {
        case '^' : return (pow(op1,op2));
        case '*' : return (op1*op2);
        case '/' : return (op1/op2);
        case '%' : return (op1%op2);
        case '+' : return (op1+op2);
        case '-' : return (op1-op2);
    }
}
void push(int x)
{
    a[++top]=x;
}
int pop()
{
    return a[top--];
}
int main()
{
    char postfix[MAX],c;
    int op1,op2,result,i=0;
    printf("\n enter the postfix expression\n");
    scanf("%[^\n]s",postfix);
    while(postfix[i]!='\0')
    {
        c=postfix[i];
        if(isdigit(c))
            push(c-'0');
        else
        {
            op1=pop();
            op2=pop();
            result=operation(op1,op2,c);
            push(result);
        }
        i++;
    }
    printf("the result of postfix expression = %d",a[top]);
    return 0;
}
